@model Product

@{
    ViewBag.Title = "Fruit";
}

       <div class="col-12 m-2">
           <h2 class="text-white bg-info p-2">Product</h2>
           <table class="table table-striped table-bordered">
               <tbody>
                    <tr>
                        <th>Name</th>
                        <td>@Model.name</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>@Model.price.ToString("c")</td>
                    </tr>
               </tbody>       
               </table>
       </div>
